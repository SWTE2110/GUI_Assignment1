<UserControl x:Class="DebtBook.Views.EditDebt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DebtBook.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ListBox Height="300" Margin="20" BorderThickness="2"></ListBox>
            <Button Width="75" Height="30"  Margin="75,0" HorizontalAlignment="Left" Content="Close" IsCancel="True"></Button>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="Value" Margin="0,20" Width="75" Height="auto"></TextBox>
            <Button  Width="75" Height="auto" Content="Add value"></Button>
        </StackPanel>
       
        
    </Grid>
</UserControl>
